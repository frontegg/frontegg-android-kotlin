<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Trust system certificates for all connections -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
            <!-- Also trust user-installed certificates for debug purposes -->
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- Specific configuration for Frontegg domain -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">davidantoon.me</domain>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </domain-config>
</network-security-config>
