<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 
        Trust only system certificates for all connections in production.
        This applies to all domains including any configured Frontegg domain.
        Cleartext (HTTP) traffic is disabled for security.
    -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Trust user-installed certificates only in debug builds for testing -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="user" />
        </trust-anchors>
    </debug-overrides>
</network-security-config>
